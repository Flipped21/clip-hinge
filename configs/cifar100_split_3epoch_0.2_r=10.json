{
  "model_name": "tprompts",
  "dataset": "cifar100",
  "mode": "CIL",
  "data_path": "./datasets/",
  "shuffle": false,
  "init_class": 10,
  "increment": 10,
  "embed_dim": 768,
  "prompt_length": 10,
  "total_tasks": 10,
  "device": ["2"],
  "seed": 1997,
  "EPSILON": 1e-8,
  "init_epochs": 15,
  "init_lr": 0.001,
  "init_milestones": [5, 10, 15],
  "init_lr_decay": 0.1,
  "init_weight_decay": 0.0005,
  "epochs": 15,
  "lr": 0.01,
  "milestones": [5, 10, 15],
  "lr_decay": 0.1,
  "batch_size": 50,
  "weight_decay": 2e-4,
  "num_workers": 8,
  
  "second_stage_epochs": 3,
  "second_stage_lr": 0.01,
  "second_stage_weight_decay": 0.0005,
  "second_stage_momentum": 0.9,
  "second_stage_logit_scale": 1.0,
  "second_stage_fusion_weight": 0.2,

  "use_lora_in_second_stage": true,
  "lora_rank": 10,
  "lora_alpha": 1,
  "lora_layers": [0, 1, 2, 3, 4],

  "text_use_hinge_loss": false,
  "text_hinge_margin": 0.1,
  "text_hinge_weight": 1,
  "text_hard_pair_threshold": 0.865,
  "text_top_hard_pairs": 10,

  "update_old_text_prompts": true,

  "use_image_adapter": false,

  "use_image_hinge_loss": true,
  "image_hinge_margin": 0.1,
  "image_hard_pair_threshold": 0.865,
  "image_top_hard_pairs": 10,
  "image_hinge_weight": 1.0,
  
  "samples_per_old_class": 40
}

